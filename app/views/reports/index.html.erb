<script>
  function initialize() {
    var myLatlng = new google.maps.LatLng(42.861118,74.607811);
    var myOptions = {
        zoom: 11,
        center: myLatlng,
        mapTypeId: google.maps.MapTypeId.ROADMAP
    }
    var map = new google.maps.Map(document.getElementById("map_canvas"), myOptions);
    <% @reports.each do |report| %>
      var image = '/images/beachflag.png';
      var myLatLng = new google.maps.LatLng(<%= report.latitude %>, <%= report.longtitude %>);
      var beachMarker = new google.maps.Marker({
          position: myLatLng,
          map: map,
          icon: image
      });
      google.maps.event.addListener(beachMarker, 'click', function() {
        window.location.href = '<%= report_path report %>';
      });
    <% end %>
  }
    
  function loadScript() {
    var script = document.createElement("script");
    script.type = "text/javascript";
    script.src = "http://maps.google.com/maps/api/js?sensor=false&callback=initialize";
    document.body.appendChild(script);
  }
    
  window.onload = loadScript;
</script>
<div class="grid_8" id="map_canvas"></div>
<div class="grid_4">
<ul id="report_list">
    <% @reports.each do |report| %>
      <li><h5><%= link_to report.title, report_path(report) %></h5></li>
    <% end %>
</ul>
</div>
<div class="clear"></div>
