doctype html
html
  head
    title Fixmystreet
    = stylesheet_link_tag "bootstrap.min","jquery.jgrowl", "disqus", "fixmystreet"
    = javascript_include_tag :defaults
    = javascript_include_tag "http://maps.google.com/maps/api/js?v=3.4&sensor=true&language=en", "markerwithlabel_packed"

    = yield :javascripts
    = csrf_meta_tag 
    = display_flash
    /link rel="alternate" type="application/rss+xml" title="Fixmystreet Kyrgyzstan" href="<%= feed_path %>.rss"
    link rel="shortcut icon" href="/images/favicon.png"
  body
    = render 'shared/header'

    .container
      .content
        = yield

    = render 'shared/footer'
    = render 'shared/login_modal' unless user_signed_in?
