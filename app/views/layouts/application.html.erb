<!DOCTYPE html>
<html>
<head>
  <title>Fixmystreet</title>
  <%= stylesheet_link_tag "reset" %>
  <%= stylesheet_link_tag "text" %>
  <%= stylesheet_link_tag "960" %>
  <%= stylesheet_link_tag "jquery.jgrowl" %>
  <%= stylesheet_link_tag "disqus" %>
  <%= stylesheet_link_tag "fixmystreet" %>
  <%= javascript_include_tag "jquery" %>
  <%= javascript_include_tag "rails" %>
  <%= javascript_include_tag "jquery.jgrowl" %>
  <%= javascript_include_tag "http://maps.google.com/maps/api/js?sensor=true&language=ru" %>
  <%= csrf_meta_tag %>
  <%= display_flash %>
  <link rel="alternate" type="application/rss+xml" title="Fixmystreet Kyrgyzstan" href="<%= feed_path %>.rss" />
</head>
<body>
    <header>
      <div class="container_12">
        <div class="grid_6">
          <div id="main_title"><a href="/">Fix My Street <span id="city">Kyrgyzstan</span></a></div>
        </div>
        <div class="grid_6 header_right">
          <div id="user_box">
            <% if user_signed_in? %>
              <%= t(:hello) + current_user.name %>.
              <%=link_to t(:logout), destroy_user_session_url() %>
            <% else %>
              <%=link_to image_tag("/images/fb.png", :alt => 'Login with Facebook'), user_omniauth_authorize_path(:facebook) %>
              <%=link_to image_tag("/images/twitter.png", :alt => 'Login with Twitter'), user_omniauth_authorize_path(:twitter) %>
            <% end %>
          </div>
          <ul id="header_menu">
            <li><%=link_to t(:submit_new_report), new_report_url(:subdomain => @city.subdomain) %></li>
            <li><%=link_to t(:about), about_path %></li>
            <li><%=link_to t(:contact_us), contacts_path %></li>
          </ul>
          <div class="clear"></div>
        </div>
      </div>
    </header>

  <article>
    <div class="container_12">
  <%= yield %>
    </div>
  </article>
  <footer>
    <div class="container_12">
      <div class="grid_2">
        <a href="http://twitter.com/fixmystreet_kg">Twitter</a><br />
        <a href="http://www.facebook.com/pages/Fixmystreet-Bishkek/215928685090784">Facebook</a><br />
        <%= link_to t(:subscribe_rss), "#{feed_path}.rss", :format => "rss" %>
      </div>
      <div class="grid_2">
        <%=link_to t(:about), about_path %><br />
        <%=link_to t(:contact_us), contacts_path %>
      </div>
      <div class="grid_4">
        <%= t(:design_by) %> <a href="http://fixmystreet.ca">Fixmystreet.CA</a><br />
      </div>
      <div class="grid_4">
        <%= link_to t(:source_code), "http://github.com/kalys/fixmystreet" %><br />
        <%= link_to t(:report_about_bug), "http://github.com/kalys/fixmystreet/issues" %><br />
        &copy; <a href="http://dolboor.kg">IT Dolboor</a>
      </div>
    </div>
  </footer>
</body>
</html>
