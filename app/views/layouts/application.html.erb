<!DOCTYPE html>
<html>
<head>
  <title>Fixmystreet</title>
  <%= stylesheet_link_tag "reset" %>
  <%= stylesheet_link_tag "text" %>
  <%= stylesheet_link_tag "960" %>
  <%= stylesheet_link_tag "jquery.jgrowl" %>
  <%= stylesheet_link_tag "disqus" %>
  <%= stylesheet_link_tag "fixmystreet" %>
  <%= javascript_include_tag "jquery" %>
  <%= javascript_include_tag "rails" %>
  <%= javascript_include_tag "jquery.jgrowl" %>
  <%= javascript_include_tag "http://maps.google.com/maps/api/js?sensor=true&language=ru" %>
  <%= csrf_meta_tag %>
  <%= display_flash %>
</head>
<body>
    <header>
      <div class="container_12">
        <div class="grid_6">
          <div id="main_title"><a href="/">Fix My Street <span id="city">Bishkek</span></a></div>
        </div>
        <div class="grid_6 header_right">
          <div id="user_box">
            <% if user_signed_in? %>
              Hello, <%= current_user.name %>.
              <%=link_to "Logout", destroy_user_session_path() %>
                <% else %>
              <%=link_to image_tag("/images/fb.png"), user_omniauth_authorize_path(:facebook) %>
              <%=link_to image_tag("/images/twitter.png"), user_omniauth_authorize_path(:twitter) %>
            <% end %>
          </div>
          <ul id="header_menu">
            <li><%=link_to "Submit new report", new_report_path %></li>
            <li><%=link_to "About", about_path %></li>
            <li><%=link_to "Contact us", contacts_path %></li>
          </ul>
          <div class="clear"></div>
        </div>
      </div>
    </header>

  <div id="content">
    <div class="container_12">
  <%= yield %>
    </div>
  </div>
  <footer>
    <div class="container_12">
      <div class="grid_2">
        <a href="http://twitter.com/fixmystreet_kg">Twitter</a><br />
        <a href="http://www.facebook.com/pages/Fixmystreet-Bishkek/215928685090784">Facebook</a><br />
      </div>
      <div class="grid_2">
        <%=link_to "About", about_path %><br />
        <%=link_to "Contact us", contacts_path %>
      </div>
      <div class="grid_4">
        Design by <a href="http://fixmystreet.ca">Fixmystreet.CA</a><br />
      </div>
      <div class="grid_4">
        <a href="http://github.com/kalys/fixmystreet">Source code</a><br />
        <a href="http://github.com/kalys/fixmystreet/issues">Report about bug</a><br />
        <a href="http://www.osmonov.com">&copy; Kalys Osmonov</a> |
        <a href="http://www.mokenov.com">Aidar Mokenov</a>
      </div>
    </div>
  </footer>
</body>
</html>
