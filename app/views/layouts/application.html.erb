<!DOCTYPE html>
<html>
<head>
  <title>Fixmystreet</title>
  <%= stylesheet_link_tag :all %>
  <%= stylesheet_link_tag "jquery.jgrowl" %>
  <%= stylesheet_link_tag "disqus" %>
  <%= javascript_include_tag "jquery" %>
  <%= javascript_include_tag "rails" %>
  <%= javascript_include_tag "jquery.jgrowl" %>
  <%= javascript_include_tag "http://maps.google.com/maps/api/js?sensor=true&language=ru" %>
  <%= csrf_meta_tag %>
  <%= display_flash %>
</head>
<body>
  <% if user_signed_in? %>
    Welcome, <%= current_user.name %>
<%=link_to "Logout", destroy_user_session_path() %>
  <% else %>
<%=link_to "Login with Facebook", user_omniauth_authorize_path(:facebook) %>
<%=link_to "Login with Twitter", user_omniauth_authorize_path(:twitter) %>
  <% end %>

<%= yield %>

</body>
</html>
